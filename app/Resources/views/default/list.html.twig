{% extends 'base.html.twig' %}

{% block body %}

    <form>
        <input name="query" value="{{ query | replace({"+":" "}) }}">
        {#<input name="query" value="{{ query | replace({"+":" "}) }}">#}
        {#<input name="query" value="{{ query | replace({"+":" "}) }}">#}
        <button type="submit">Search</button>
    </form>

    <table id="places">
        <thead>
            <th>Name</th>
            <th>Latitude</th>
            <th>Longitude</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Hours</th>
            <th>Website</th>
            <th>Add</th>
        </thead>

        <tbody>
            {% for place in places %}
                <tr>
                    <td>{{ place.place.name }}</td>
                    {#<td>{{ place.reviews}}</td>#}
                    <td>{{ place.place.lat }}</td>
                    <td>{{ place.place.lng }}</td>
                    <td>{{ place.place.phone }}</td>
                    <td>{{ place.place.address }}</td>
                    <td>{{ place.place.hours }}</td>
                    <td>{{ place.place.website }}</td>
                    <td><a href="{{ path('saveData', {'placeId': place.place.placeId, 'name':place.place.name, 'phone':place.place.phone, 'address':place.place.address, 'hours':place.place.hours, 'website':place.place.website, 'lat':place.place.lat, 'lng':place.place.lng, 'reviews':place.reviews}) }}">Add</a></td>
                    {#<td><a href="{{ path('saveData', {'placeId': place.placeId}) }}">Add</a></td>#}
                    {#<td><button id="addButton" type="button" class="btn btn-primary">Add</button></td>#}
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready( function () {
            $('#places').DataTable();

        } );
    </script>
{% endblock %}